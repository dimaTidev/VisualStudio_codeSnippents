<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Scriptable Object Class</Title>
      <Author>Dreamer</Author>
      <Description>Creates Scriptable Object Class</Description>
      <Shortcut>createAssetMenu</Shortcut>
    </Header>
    <Snippet>
      <Code Language="CSharp">
        <![CDATA[
          [CreateAssetMenu(fileName = "$className$", menuName = "ScriptableObjects/$className$", order = $order$)]
        ]]>
      </Code>
      <Declarations>
        <Literal>
          <ID>className</ID>
          <ToolTip>Class Name</ToolTip>
          <Default>GameData</Default>
        </Literal>
        <Literal>
          <ID>order</ID>
          <ToolTip>MenuItem Order</ToolTip>
          <Default>30</Default>
        </Literal>
      </Declarations>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>